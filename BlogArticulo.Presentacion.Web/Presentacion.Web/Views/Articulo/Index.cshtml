<div class="row mb-2">
    <div class="col">
        Categoria <span class="badge badge-warning">@Model.TipoDeArticulo.Nombre.ToUpper()</span>
    </div>
</div>
<div class="row">
    <div class="container">
        <div class="row" style="cursor: pointer">
            @if (Model.Articulos.Count == 0)
            {
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                No hay noticias en esta sección
            </div>
            }
            else
            {
                foreach (var item in Model.Articulos)
                {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card" onclick="verNoticia(@item.Id);">
                        <img src="~/Resource/imagenes/Articulos/@item.Imagen" height="150px" width="150px" class="card-img-top" alt="">
                        <div class="card-body">
                            <div class="badges">
                                <span class="badge badge-warning">@item.TipoArticulo.Nombre</span>
                                <span class="badge badge-info">@item.Usuario.NickName</span>
                                <span class="badge badge-secondary">@item.FechaPublicacion.ToString("dd-MM-yyyy HH:mm")</span>
                            </div>
                            <h5 class="card-title">@item.Titulo</h5>
                            <p class="card-text">@item.Cabecera</p>
                        </div>
                    </div>
                </div>
                }
            }
        </div>
        <div class="row" style="cursor: pointer">
        </div>
    </div>
</div>
<script type="text/javascript">
    var verNoticia = function (id) {
        var url = "/Articulo/VerArticulo/?idArticulo=" + id ;
        $(location).attr('href', url);
    };

</script>

